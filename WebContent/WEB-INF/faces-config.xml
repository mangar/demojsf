<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">
	<converter>
		<converter-for-class>br.com.neb.handler.vo.CreditCardVO</converter-for-class>
		<converter-class>br.com.neb.converter.CreditCardConverter</converter-class>
	</converter>
	<managed-bean>
		<managed-bean-name>loginHandler</managed-bean-name>
		<managed-bean-class>br.com.neb.handler.LoginHandler</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>supplierHandler</managed-bean-name>
		<managed-bean-class>br.com.neb.handler.SupplierHandler</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.doAuthentication}</from-action>
			<from-outcome>authenticated</from-outcome>
			<to-view-id>/main/main.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.doAuthentication}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/main/fail.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.doAuthentication}</from-action>
			<from-outcome>selectSupplier</from-outcome>
			<to-view-id>/main/selectSuppliers.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main/selectSuppliers</display-name>
		<from-view-id>/main/selectSuppliers.jsp</from-view-id>
		<navigation-case>
			<from-action>#{loginHandler.doSupplierSelected}</from-action>
			<from-outcome>selected</from-outcome>
			<to-view-id>/main/main.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main/main</display-name>
		<from-view-id>/main/main.jsp</from-view-id>
		<navigation-case>
			<from-action>#{supplierHandler.doCreate}</from-action>
			<from-outcome>create</from-outcome>
			<to-view-id>/supplier/create.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>supplier/create</display-name>
		<from-view-id>/supplier/create.jsp</from-view-id>
		<navigation-case>
			<from-action>#{supplier.doSave}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/supplier/create.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<application>
		<message-bundle>MessageResources_en</message-bundle>
		<message-bundle>MessageResources_pt</message-bundle>
		<locale-config>
			<default-locale>pt</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
	</application>
</faces-config>
